          = catch_content :for_layout
          #footer
            .block
              %p Copyright &copy; 2009 Opscode, Inc.
        #sidebar
          .block.notice#sidebar_block_notice= catch_content :sidebar_block_notice
          .block#sidebar_block= catch_content :sidebar_block
        .clear
