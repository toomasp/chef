    %meta{ "http-equiv" => "content-type", :content => "text/html; charset=utf-8" }
    %title Chef Server
    = css_include_tag "base", "themes/djime-cerulean/style", "chef"
  %body
    #container
      #header
        %h1= link_to "Chef REST API", absolute_url(:top)
